{
  "name": "ponnect",
  "version": "1.0.0",
  "description": "Australian Dog Parent Community App - A web + mobile platform connecting dog owners in Queensland",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:web": "cd packages/web && npm run dev",
    "dev:mobile": "cd packages/mobile && npm start",
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "cd packages/backend && npm run build",
    "build:web": "cd packages/web && npm run build",
    "test": "npm run test:backend && npm run test:web",
    "test:backend": "cd packages/backend && npm test",
    "test:web": "cd packages/web && npm test"
  },
  "keywords": [
    "dog",
    "community",
    "pet",
    "health",
    "queensland",
    "brisbane",
    "australia"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
